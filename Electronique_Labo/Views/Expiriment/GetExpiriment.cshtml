@using Electronique_Labo.Models

@model Electronique_Labo.Models.ViewModel

@{
    ViewBag.Title = "Affichage";

}
<head>


   
    <link href="~/Content/resume.css" rel="stylesheet" />
    <link href="~/Content/resume.min.css" rel="stylesheet" />
</head>

<div class="navbar" style="background: #2077BD" id="sideNav">
    <a class="navbar-brand">
        <span class="d-none d-lg-block">
            <img class="img-fluid img-profile rounded-circle " style="width: 100px;height: 100px" src="~/profileimage/@Model.Profileimg.image" />
        </span>
    </a>
    <br />
    <br />
    <div class=" float-left">
        <h3 class=" float-left text-white ">Secteur : @Model.Secteur.Nom</h3>
        <h5 class=" float-left text-white ">Niveau : @Model.Niveau.Nom</h5>
    </div>
    <div class="navbar-brand" id="navbarSupportedContent">
        <h5 class="mb-0 text-white"><a href="mailto:@User.Identity.Name" class="text-white">@User.Identity.Name </a></h5>

    </div>
</div>

<div class="container-fluid p-0">
    <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="about">
        <div class="my-auto">
            <h3 class="text-primary float-right">@Model.Expiriment.DateTime.ToShortDateString()</h3>
            <h3 class="mb-5 "><b class="text-warning font-weight-bold">@Model.Expiriment.Titre</b>  </h3>


            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h4 class="mb-0  ">But de l'expririment</h4>
                    <p class="subheading text-lowercase">- @Model.Expiriment.But</p>
                </div>

            </div>

            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h4 class="mb-0">Resultat Attendu</h4>
                    <p class="subheading text-lowercase">- @Model.Expiriment.ResultatAttendue</p>
                </div>

            </div>

            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h4 class="mb-0">les Outils </h4>
                    <ul>
                        @foreach (var outi in Model.Outils)
                        {
                            <li class="subheading"> @outi.Nom</li>
                        }
                    </ul>
                </div>

            </div>

            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h4 class="mb-0">les Conseil </h4>
                    <ul>
                        @foreach (var conseil in Model.Conseils)
                        {
                            <li class="subheading"> @conseil.Nom</li>
                        }
                    </ul>
                </div>
            </div>
            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    <h4 class="mb-0">les Image de L'expiriment </h4>
                    <ul>
                        <div class="row mt-2">
                            @foreach (var v in Model.Imageses)
                            {
                                var myModal = "myModal" + v.Id;
                                <div class="card mr-2 mb-2" style="width: 18rem;">
                                    <img class="card-img-top" src="~/Images/GroupsImage/@v.Image" style="height: 180px; width: 100%; display: block;" alt="Card image cap">
                                    <div class="card-body">
                                        <p class="card-text">@v.Titre</p>
                                    </div>
                                    <div class="card-footer">

                                        <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#@myModal"
                                                data-whatever="@v.Id">
                                            Aficher
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="@myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Image</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <img src="~/Images/GroupsImage/@v.Image" class="img-fluid" alt="Responsive image">
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </ul>
                </div>
            </div>
            <div class="resume-item d-flex flex-column flex-md-row mb-5">
                <div class="resume-content mr-auto">
                    @if (Model.GoogleDriveFiles.Count > 0)
                    {
                        <h4 class="mb-0">Fichier Pour Telecharger </h4>
                    }

                    <ul>
                        <div class="row mt-2">
                            @foreach (var v in Model.GoogleDriveFiles)
                            {
                                <div class="card text-white  mb-3 mr-2" style="max-width: 20rem;">
                                    <div class="card-header">@v.Name</div>
                                    <div class="card-body">
                                        <h4 class="card-title text-dark">@v.TiTle</h4>

                                    </div>
                                    <div class="card-footer">
                                        <a href="https://drive.google.com/file/d/@v.FileId/view" class="btn btn-primary" target="_blanck">Telecharger</a>
                                    </div>
                                </div>
                            }

                        </div>
                    </ul>
                </div>
            </div>
        </div>

    </section>

</div>

